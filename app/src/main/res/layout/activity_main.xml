<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scroll"
            android:gravity="center"
            android:id="@+id/toplaout"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/payunic"
                app:layout_constraintBottom_toTopOf="@id/title"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:id="@+id/image"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PayUnic"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@id/scroll"
                android:layout_marginTop="-15dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image"/>

        </LinearLayout>



        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toplaout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColorHint="#191919"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp"
                    android:text="Name"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="#000"
                    android:inputType="text"
                    android:layout_margin="8dp"
                    android:id="@+id/name"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColorHint="#191919"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    android:layout_marginStart="8dp"
                    android:text="Phone"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:inputType="phone"

                    android:textColor="#000"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    android:layout_margin="8dp"
                    android:id="@+id/phone"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColorHint="#191919"
                    app:layout_constraintTop_toBottomOf="@id/phone"
                    android:layout_marginStart="8dp"
                    android:text="Amount"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:inputType="numberDecimal"

                    android:textColor="#000"
                    app:layout_constraintTop_toBottomOf="@id/phone"
                    android:layout_margin="8dp"
                    android:id="@+id/amount"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColorHint="#191919"
                    app:layout_constraintTop_toBottomOf="@id/amount"
                    android:layout_marginStart="8dp"
                    android:text="Payment Gateway"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amount"
                    android:layout_margin="8dp"
                    android:textColor="#000"
                    android:enabled="false"
                    android:inputType="text"
                    android:id="@+id/gateway" />

                <Spinner
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/gateway"
                    app:layout_constraintTop_toTopOf="@id/gateway"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/gateway"
                    android:id="@+id/spinner"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColorHint="#191919"
                    app:layout_constraintTop_toBottomOf="@id/gateway"
                    android:layout_marginStart="8dp"
                    android:text="Payment Phone Number"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gateway"
                    android:layout_margin="8dp"
                    android:textColor="#000"
                    android:inputType="phone"
                    android:id="@+id/paymentPhone"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColorHint="#191919"
                    app:layout_constraintTop_toBottomOf="@id/paymentPhone"
                    android:layout_marginStart="8dp"
                    android:text="Transaction ID"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/paymentPhone"
                    android:layout_margin="8dp"

                    android:textColor="#000"
                    android:inputType="text"
                    android:id="@+id/trxid"
                    />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Print"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/trxid"
                    android:layout_margin="8dp"
                    android:id="@+id/print"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/orLayout"
                    app:layout_constraintTop_toBottomOf="@id/print"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="#000"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="or"/>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="#000"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"/>


                </LinearLayout>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/orLayout"
                    android:layout_margin="8dp"
                    android:backgroundTint="#AA4646"
                    android:id="@+id/scan"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>